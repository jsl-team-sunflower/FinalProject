<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sunflower.mapper.CommentMapper">

	<insert id="commentRegister">
		insert into hm_comment (comNum,comWriter,comContent,qnaNum) 
		values (comment_seq.nextval, #{com_writer},#{com_content},#{qnaNum})
	</insert>
	
	<select id="getTotal" resultType="int">
		select count(*) from hm_comment where qnaNum = #{qnaNum}
	</select>
	
	<select id="getCommentList" resultType="com.sunflower.domain.CommentVO">
		select * from hm_comment where qnaNum = #{qnaNum}
	</select>
	
	<select id="readComment" resultType="com.sunflower.domain.CommentVO">
		select * from hm_comment where comNum = #{com_no}
	</select>

	<update id="updateComment">
		update hm_comment set comContent = #{com_content}, comRegdate = sysdate 
		where qnaNum = #{com_no}
	</update>
	
	<delete id="removeComment">
		delete from hm_comment where qnaNum = #{com_no}
	</delete>
</mapper>